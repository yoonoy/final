<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo12.HelloController">
    <Label text="Hotel Reservation System" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <!-- TableView for Rooms -->
    <TableView fx:id="roomTable" prefHeight="300" prefWidth="500">
        <columns>
            <TableColumn text="Room ID" fx:id="roomIdColumn" />
            <TableColumn text="Type" fx:id="roomTypeColumn" />
            <TableColumn text="Price" fx:id="roomPriceColumn" />
            <TableColumn text="Availability" fx:id="roomAvailabilityColumn" />
        </columns>
    </TableView>

    <!-- Reservation Button -->
    <Button text="Reserve Room" fx:id="reserveButton" onAction="#handleReserveRoom" />
</VBox>
